# Production Environment Configuration
NODE_ENV=production

# Discord Configuration
DISCORD_TOKEN=your_production_discord_bot_token
DISCORD_CLIENT_ID=your_client_id
DISCORD_GUILD_ID=your_guild_id

# PostgreSQL Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=popverse_kingdoms
DB_USER=popverse_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0

# Web Dashboard
WEB_PORT=3000
JWT_SECRET=CHANGE_THIS_LONG_RANDOM_JWT_SECRET_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=7d

# Game Configuration
MAP_SIZE=100
SEASON_DURATION_DAYS=90
CONQUEST_DAY=saturday
CONQUEST_HOUR=20

# Monitoring
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# Performance
MAX_WORKERS=4
CACHE_TTL=3600
